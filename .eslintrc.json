{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "env": {
    "browser": true,
    "node": true,
    "react-native/react-native": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": "warn",  // Warn for unused variables
    "no-undef": "error",  // Error for undeclared variables
    "react/prop-types": "off",  // Disable prop-types rule
    "react/react-in-jsx-scope": "off",  // Off for newer React versions
    "react/jsx-uses-react": "off",  // Off for newer React versions
    "react/jsx-uses-vars": "warn"  // Warn for unused React variables
  }
}
